<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lyTop"
    android:layout_width="match_parent"
    android:layout_height="@dimen/shirinaPanelek"
    android:background="@color/herniy"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <ImageButton
        android:id="@+id/ibOpisanieKorzina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@color/herniy"
        android:paddingBottom="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/korzina" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="@dimen/shirina_poley_vvoda"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/backgrbelizakrugl"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_otstup"
        android:text="@string/ya_ihu"
        android:textColor="@color/colorCena2"
        android:textSize="@dimen/shrift_melkiy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ibOpisanieKorzina"
        app:layout_constraintStart_toEndOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_weight="0.1"
        android:background="@color/herniy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/tvKorzinaCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@drawable/layout_bg"
        android:paddingLeft="2dp"
        android:paddingRight="@dimen/otstup_mejdu_panelkami"
        android:text="1"
        android:textColor="@color/fon_color"
        android:textSize="@dimen/text_micro"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/ibOpisanieKorzina"
        app:layout_constraintEnd_toEndOf="@+id/ibOpisanieKorzina"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/ibOpisanieKorzina"
        app:layout_constraintTop_toTopOf="@+id/ibOpisanieKorzina"
        app:layout_constraintVertical_bias="0.82" />

</androidx.constraintlayout.widget.ConstraintLayout>